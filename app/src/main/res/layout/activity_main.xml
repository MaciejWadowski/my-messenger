<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="14dp" android:id="@+id/send_message"
            android:onClick="sendMessage"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="473dp" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:id="@+id/chat"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp"
    />
    <EditText
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="@string/type_hint"
            android:id="@+id/user_message" android:layout_alignParentStart="true" android:layout_marginStart="22dp"
            android:layout_alignTop="@+id/send_message"/>
</RelativeLayout>